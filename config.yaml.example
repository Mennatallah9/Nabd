# Copy this file to backend/config.yaml and update the values as needed


# Database configuration
database:
  path: "./nabd.db"

# Docker configuration
docker:
  host: "unix:///var/run/docker.sock"

# Authentication
auth:
  admin_token: "nabd-admin-token"

# Auto-healing configuration
autoheal:
  enabled: true
  interval: 15  # seconds
  exclude_containers:
    - "nabd"

# Alert thresholds
alerts:
  cpu_threshold: 90.0      # CPU percentage threshold
  memory_threshold: 90.0   # Memory percentage threshold
  restart_limit: 3         # Maximum restarts before alerting